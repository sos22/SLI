subdirs="auxprogs priv pub"
targets="libVEX.a"

defvars() {
    echo 'libvex_objects=$(patsubst %.cpp,%.o,$(libvex_sources))'
    echo "libvex=$input_base"
    echo 'all_sources+=$(libvex_sources)'
}

rules() {
	cat <<EOF
\$(libvex_objects): CPPFLAGS+=-I${input_base}/pub
libVEX.a: \$(libvex_objects)
	  rm -f \$@ ; ar rcs \$@ \$^
EOF
}