targets=''
sli_tests="pmap vamap nd_chooser parse_state_machine survival_constraint"

defvars() {
    echo "SLI_TESTS=\$(patsubst %,${input_base}/%,${sli_tests})"
    echo 'TARGETS+=$(SLI_TESTS)'
}
rules() {
    echo "\$(SLI_TESTS): CPPFLAGS+=-Isli -I\$(libvex)/pub -I\$(libvex)/priv"
    for t in $sli_tests
    do
	echo "${input_base}/$t: ${input_base}/${t}.cpp slir.a libVEX.a"
	echo -e '\tgcc -lrt -lstdc++ $(CFLAGS) $(CPPFLAGS) $^ -o $@'
    done
}