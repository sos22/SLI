sli_tests="pmap vamap nd_chooser parse_state_machine survival_constraint simplify_irexpr"
sli_tests="$sli_tests find_remote_sections simplify_state_machine testgetStoreCFGs getProbeCFGs"
sli_tests="$sli_tests sat_checker nf store_unroll_cycle_break"

targets=$(echo $sli_tests | sed "s%\<%${input_base}/%g")

rules() {
    objects=$(echo -n "$sli_tests " | sed "s%\<%${input_base}/%g;s% %.o %g")
    echo "$objects: CPPFLAGS+=-Isli -I\$(libvex)/pub -I\$(libvex)/priv"
    for t in $sli_tests
    do
	echo "${input_base}/${t}.o: ${input_base}/${t}.cpp"
	echo "${input_base}/$t: ${input_base}/${t}.o slir.a libVEX.a"
	echo -e '\tgcc -lrt -lstdc++ $(CFLAGS) $(CPPFLAGS) -lsqlite3 $^ -o $@'
    done
}